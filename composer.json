{
    "name": "togomq/togomq-sdk",
    "description": "Official PHP SDK for TogoMQ - A modern, high-performance message queue service",
    "type": "library",
    "keywords": ["togomq", "message-queue", "grpc", "pub-sub", "messaging", "sdk"],
    "homepage": "https://togomq.io",
    "license": "MIT",
    "authors": [
        {
            "name": "TogoMQ",
            "email": "info@togomq.io"
        }
    ],
    "require": {
        "php": "^8.1",
        "togomq/togomq-grpc": "dev-main",
        "grpc/grpc": "^1.57",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.10",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "TogoMQ\\SDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TogoMQ\\SDK\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "analyse": "phpstan analyse src tests --level=8"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
